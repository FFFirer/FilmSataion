@model IEnumerable<FilmStation.Domain.Entities.RateCollection>

@{
    ViewBag.Title = "RateList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>RateList</h2>

<p>
    @Html.ActionLink("Create New Rate", "RateCreate")
</p>
<input type="button" id="tog" value="显示/隐藏" />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsShow)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @if (item.IsShow == true)
            {
                <p>Yes</p>
            }
            else
            {
                <p>No</p>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "RateEdit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "RateDelete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<script src="~/Scripts/customed/HideNo.js" type="text/javascript"></script>
