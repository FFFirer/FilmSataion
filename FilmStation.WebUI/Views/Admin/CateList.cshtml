@model IEnumerable<FilmStation.Domain.Entities.Category>

@{
    ViewBag.Title = "CateList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CateList</h2>

<p>
    @Html.ActionLink("Create New Category", "CateCreate")
</p>
<input type="button" id="tog" value="显示/隐藏" />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ChCateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnCateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsShow)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ChCateName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnCateName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @if(item.IsShow == true)
            {
                <p>Yes</p>
            }
            else
            {
                <p>No</p>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "CateEdit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "CateDelete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<script src="~/Scripts/customed/HideNo.js" type="text/javascript"></script>
