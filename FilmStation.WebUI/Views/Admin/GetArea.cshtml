@model IEnumerable<FilmStation.Domain.Entities.AreaCollection>

@{
    ViewBag.Title = "GetArea";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>GetArea</h2>

<form action="@Url.Action("GetArea", "Admin")" method="post">
    <div class="row">
        <div class="col-xs-2">
            ID
        </div>
        <div class="col-xs-4">
            地区
        </div>
        <div class="col-xs-4">
            计数
        </div>
        <div class="col-xs-2">
            是否显示（左是右否）
        </div>
    </div>
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="row">
            <div class="col-xs-2">
                <input type="text" name="[@i].Id" value="@Model.ElementAt(i).Id" />
            </div>
            <div class="col-xs-4">
                <input type="text" name="[@i].Area" value="@Model.ElementAt(i).Area" />
            </div>
            <div class="col-xs-4">
                <input type="text" name="[@i].Amount" value="@Model.ElementAt(i).Amount" />
            </div>
            <div class="col-xs-2">
                @if (Model.ElementAt(i).IsShow == true)
                {
                    <select name="[@i].IsShow">
                        <option value="true" selected="selected">Yes</option>
                        <option value="false">No</option>
                    </select>
                }
                else
                {
                    <select name="[@i].IsShow">
                        <option value="true">Yes</option>
                        <option value="false" selected="selected">No</option>
                    </select>
                }
            </div>
        </div>
    }
    <input type="submit" value="保存" />
</form>